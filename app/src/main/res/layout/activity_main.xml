<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="78dp"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13">

        <TextView
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="+"
            android:textColor="@color/purple_200"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="-"
            android:textColor="@color/purple_200"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="369dp"
        android:layout_height="178dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="350dp"
            android:layout_height="112dp"
            android:background="@color/purple_200"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/waterimage"
                android:layout_width="111dp"
                android:layout_height="106dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/bottlewater" />

            <ImageView
                android:id="@+id/cokecanimage"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/cokec" />

            <ImageView
                android:id="@+id/cokeimage"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/coke" />

            <ImageView
                android:id="@+id/crunchimage"
                android:layout_width="81dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/crunch" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="353dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/watere"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="0.5E"
                android:textColor="@color/purple_200"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/cokecane"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="1E"
                android:textColor="@color/purple_200"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/cokee"
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="1.5E"
                android:textColor="@color/purple_200"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/crunche"
                android:layout_width="17dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="2.5E"
                android:textColor="@color/purple_200"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="353dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/water"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/purple_200"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/cokecan"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="@color/purple_200"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/coke"
                android:layout_width="11dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="@color/purple_200"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/crunch"
                android:layout_width="17dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="@color/purple_200"
                android:textSize="25dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_marginTop="24dp"
        android:text="Total of 0.00 E"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintHorizontal_bias="0.479"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <Button
        android:id="@+id/purchasebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="PURCHASE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap products and add them (+) to your basket"
        android:textColor="@color/white"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="95dp" />

    <Button
        android:id="@+id/resetbutton"
        android:layout_width="87dp"
        android:layout_height="48dp"
        android:layout_marginTop="29dp"
        android:text="RESET"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purchasebutton"
        app:layout_constraintVertical_bias="0.076" />

</androidx.constraintlayout.widget.ConstraintLayout>